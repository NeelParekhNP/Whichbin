<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bad_art_frontscreen_no_text"
    tools:context=".MainMenu"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <Button
        android:id="@+id/multiplayerGameX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:background="@drawable/button_rounded_corners"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="@string/multiplayer_game"
        app:layout_constraintEnd_toStartOf="@+id/menu_guidline2"
        app:layout_constraintStart_toStartOf="@+id/menu_guidline1"
        app:layout_constraintTop_toBottomOf="@+id/levelSelectorButtonX" />

    <Button
        android:id="@+id/levelSelectorButtonX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_rounded_corners"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="@string/play_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_guidline2"
        app:layout_constraintStart_toStartOf="@+id/menu_guidline1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cinematicX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_rounded_corners"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="@string/dialogue_button"
        app:layout_constraintEnd_toStartOf="@+id/menu_guidline2"
        app:layout_constraintStart_toStartOf="@+id/menu_guidline1"
        app:layout_constraintTop_toBottomOf="@+id/multiplayerGameX" />

    <Button
        android:id="@+id/instructionsX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_rounded_corners"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="@string/onboarding_button"
        app:layout_constraintEnd_toStartOf="@+id/menu_guidline2"
        app:layout_constraintStart_toStartOf="@+id/menu_guidline1"
        app:layout_constraintTop_toBottomOf="@+id/cinematicX" />

    <Button
        android:id="@+id/resetX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_rounded_corners"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="@string/reset_button"
        app:layout_constraintEnd_toStartOf="@+id/menu_guidline2"
        app:layout_constraintStart_toStartOf="@+id/menu_guidline1"
        app:layout_constraintTop_toBottomOf="@+id/instructionsX" />

    <android.support.constraint.Guideline
        android:id="@+id/menu_guidline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <android.support.constraint.Guideline
        android:id="@+id/menu_guidline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

</android.support.constraint.ConstraintLayout>
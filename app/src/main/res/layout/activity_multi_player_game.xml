<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper1"
    tools:context=".MultiPlayerGame">

    <TextView
        android:id="@+id/p2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:rotation="180"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/mpNextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2R2LinearLayout" />

    <LinearLayout
        android:id="@+id/p2R1LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:rotation="180"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/p2Button1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Button"
            android:textSize="10sp" />

        <Button
            android:id="@+id/p2Button2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Button"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/p2R2LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:rotation="180"
        app:layout_constraintTop_toBottomOf="@+id/p2R1LinearLayout"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/p2Button3"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Button"
            android:textSize="10sp" />

        <Button
            android:id="@+id/p2Button4"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Button"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/p1R1LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/p1R2LinearLayout"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/p1Button1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Button"
            android:textSize="10sp" />

        <Button
            android:id="@+id/p1Button2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Button"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/p1R2LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/p1Button3"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Button"
            android:textSize="10sp" />

        <Button
            android:id="@+id/p1Button4"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Button"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/p1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/p1R1LinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mpNextButton" />

    <Button
        android:id="@+id/mpNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/nextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>